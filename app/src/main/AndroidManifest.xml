<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kaufland.com.todo">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".object.todo.activity.AddTodoActivity"
            android:label="@string/title_activity_add_todo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".object.goal.activity.AddGoalActivity"
            android:label="@string/title_activity_add_goal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".object.goal.activity.AddDateForGoalActivity"
            android:label="@string/title_activity_add_date_for_goal"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>